{
	"name": "huralya_genesis",
	"version": "0.3.0",
	"scripts": {
		"dev": "vite dev",
		"build": "npm run build:sanity && pwd && vite build",
		"package": "svelte-kit package",
		"start": "vite preview",
		"build:sanity": "cd studio && sanity build ../static/studio -y && cd ..",
		"start:sanity": "cpy .env ./studio --rename .env.development && cd studio && sanity start",
		"test": "playwright test",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. .",
		"postinstall": "lerna bootstrap"
	},
	"devDependencies": {
		"@playwright/test": "^1.27.0",
		"@portabletext/svelte": "^1.0.1",
		"@sanity/cli": "^2.34.0",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/adapter-static": "^1.0.0-next.46",
		"@sveltejs/kit": "next",
		"@types/cookie": "^0.5.1",
		"@types/dat.gui": "^0.7.7",
		"@types/howler": "^2.2.7",
		"@types/three": "^0.142.0",
		"@typescript-eslint/eslint-plugin": "^5.39.0",
		"@typescript-eslint/parser": "^5.39.0",
		"autoprefixer": "^10.4.12",
		"eslint": "^8.25.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"lerna": "^5.6.1",
		"postcss": "^8.4.17",
		"prettier": "^2.6.2",
		"prettier-plugin-svelte": "^2.7.1",
		"sass": "^1.55.0",
		"svelte": "^3.44.0",
		"svelte-check": "^2.7.1",
		"svelte-preprocess": "^4.10.6",
		"tailwind-scrollbar": "^2.0.1",
		"tailwindcss": "^3.1.8",
		"tslib": "^2.3.1",
		"typescript": "^4.8.4",
		"vite": "^3.1.6",
		"vite-plugin-glsl": "^0.4.0"
	},
	"type": "module",
	"dependencies": {
		"@fontsource/fira-mono": "^4.5.10",
		"@sanity/client": "^3.4.1",
		"@sanity/image-url": "^1.0.1",
		"cookie": "^0.5.0",
		"cpy-cli": "^4.2.0",
		"gsap": "^3.11.3",
		"howler": "^2.2.3",
		"three": "^0.145.0",
		"web-vitals": "^3.0.3"
	}
}
